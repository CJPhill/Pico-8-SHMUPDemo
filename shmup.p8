version 41
__lua__
--wow
function _init()
	cls(0)
	shipx = 40
	shipy = 40
	speedx = 0
	speedy = 0
	
	bulx=64
	buly=40
end

function _update()
	speedx=0
	speedy=0
	
	
	--controls on x-axis
	if btn(⬅️) then
		speedx = -2
	end
	
	if btn(➡️) then
		speedx = 2
	end
	--moving the ship
	shipx=shipx+speedx
	
	--controls on y-axis
	if btn(⬆️) then
		speedy = -2
	end
	
	if btn(⬇️) then
		speedy = 2
	end
	
	if btnp(❎) then
		buly=shipy-3
		bulx=shipx
		sfx(0)
	end
	
	--moving the ship
	shipy=shipy+speedy
	
	--move the bullet
	buly=buly-4
	
	--edge check
	if shipx>120 then
		shipx=120
	end
	if shipx<0 then
		shipx=0
	end
	if shipy>120 then
		shipy=120
	end
	if shipy<0 then
		shipy=0
	end
		
end

function _draw()
	cls(0)
	spr(1,shipx,shipy)
	spr(2,bulx,buly)
	if btn(⬅️) then
		spr(17,shipx,shipy)
	end
	
	if btn(➡️) then
		spr(33,shipx,shipy)
	end 
end


